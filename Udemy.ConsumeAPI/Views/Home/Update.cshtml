@model Udemy.ConsumeAPI.ResponseModels.ProductResponseModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Ürün Güncelle</title>
</head>
<body>
    @{
        if (TempData["errorMessage"] != null)
        {
            <p style="color:red">
                @TempData["errorMessage"]?.ToString()
            </p>
        }
    }
    <h1>Ürün Ekle</h1>
    <form asp-action="Update" asp-controller="Home" method="post">
        <input type="hidden" asp-for="@Model.Id"/>
        <label>Ürün Adı : </label>
        <input type="text" asp-for="@Model.Name" />
        <br />
        <label>Ürün Fiyatı : </label>
        <input asp-for="@Model.Price" />
        <br />
        <label>Ürün Stok Adeti : </label>
        <input asp-for="@Model.Stock" />
        <br />
        <hr />

        <div>
            <a asp-action="Index" asp-controller="Home">Geri Dön</a>
            <button type="submit">Güncelle</button>
        </div>
    </form>
</body>
</html>